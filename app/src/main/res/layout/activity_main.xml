<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context="com.example.guest.whereismycar.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/accent"
        android:text="Vehicle Name"
        android:id="@+id/vehicleNameTextView"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehicleNameEditText"
        android:textColor="@color/accent"
        android:textAlignment="center"
        android:backgroundTint="@color/accent"
        android:layout_below="@+id/vehicleNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:layout_marginTop="17dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehicle Description"
        android:textAlignment="center"
        android:id="@+id/vehicleDescriptionTextView"
        android:layout_below="@+id/vehicleNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:backgroundTint="@color/accent"
        android:id="@+id/vehicleDescriptionEditText"
        android:layout_below="@+id/vehicleDescriptionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:layout_marginTop="17dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add a Photo"
        android:textAlignment="center"
        android:id="@+id/imageTextView"
        android:layout_below="@+id/vehicleDescriptionEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cameraIcon"
        android:layout_below="@id/imageTextView"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_a_photo_white_24dp" >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Location"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:textColor="@color/accent"
        android:id="@+id/currentTextView"
        android:layout_below="@+id/cameraIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitude/Longitude"
        android:textColor="@color/accent"
        android:textAlignment="center"
        android:id="@+id/locationTextView"
        android:layout_below="@+id/currentTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:background="@color/accent"
        android:layout_marginBottom="2dp"
        android:id="@+id/updateLocationButton"
        android:layout_above="@+id/saveVehicleButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Vehicle Location"
        android:id="@+id/saveVehicleButton"
        android:background="@color/accent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where is my Car?"
        android:id="@+id/vehicleLocationButton"
        android:background="@color/accent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
